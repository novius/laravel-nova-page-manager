{
    "name": "novius/laravel-nova-page-manager",
    "description": "A Laravel Nova package to manage pages.",
    "keywords": [
        "laravel",
        "nova",
        "page-manager"
    ],
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Novius Agency",
            "email": "team-developpeurs@novius.com",
            "homepage": "https://www.novius.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "laravel/framework": "10.0 | ^11.0 | ^12.0",
        "laravel/nova": "^4.0 | ^5.0",
        "novius/laravel-linkable": "^1.0",
        "novius/laravel-json-casted": "^1.0.0",
        "novius/laravel-meta": "^1.0",
        "novius/laravel-nova-field-preview": "^2.0",
        "novius/laravel-nova-publishable": "^3.0",
        "novius/laravel-nova-translatable": "^2.0",
        "spatie/laravel-sluggable": "^3.4"
    },
    "require-dev": {
        "larastan/larastan": "^2.0 | ^3.0",
        "laravel/pint": "^1.7",
        "orchestra/testbench": "^8.0.0 | ^9.12 | ^10.1"
    },
    "autoload": {
        "psr-4": {
            "Novius\\LaravelNovaPageManager\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Novius\\LaravelNovaPageManager\\LaravelNovaPageManagerServiceProvider"
            ]
        }
    },
    "scripts": {
        "fmt": [
            "./vendor/bin/pint -v"
        ],
        "cs-fix": [
            "./vendor/bin/pint -v"
        ],
        "lint": [
            "@composer fmt -- --test"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse --memory-limit=1G"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    }
}
